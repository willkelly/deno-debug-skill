{
  "tasks": {
    "test": "deno test --allow-read --allow-net --allow-write",
    "test:watch": "deno test --allow-read --allow-net --allow-write --watch",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["scripts/", "tests/"]
  },
  "lint": {
    "include": ["scripts/", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["scripts/**/*_test.ts", "tests/**/*_test.ts"]
  }
}
